{
  "rewrites": [
    {
      "source": "/api/espn/:path*",
      "destination": "https://sports.core.api.espn.com/:path*"
    },
    {
      "source": "/((?!assets|api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
